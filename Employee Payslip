PROGRAM:

#include <iostream>
using namespace std;

class Employee {
    string name;
    int id;
    float basic, da, hra, gross, tax, net;

public:
    void getDetails();
    void calculate();
    void displayPayslip();
};

void Employee::getDetails() {
    cout << "Enter Employee Name: ";
    getline(cin, name);
    cout << "Enter Employee ID: ";
    cin >> id;
    cout << "Enter Basic Pay: ";
    cin >> basic;
}

void Employee::calculate() {
    da = basic * 0.70;
    hra = basic * 0.10;
    gross = basic + da + hra;
    tax = gross * 0.20;
    net = gross - tax;
}

void Employee::displayPayslip() {
    cout << "\nEmployee Payslip" << endl;
    cout << "----------------" << endl;
    cout << "Name: " << name << endl;
    cout << "ID: " << id << endl;
    cout << "Basic Pay: " << basic << endl;
    cout << "DA: " << da << endl;
    cout << "HRA: " << hra << endl;
    cout << "Gross Salary: " << gross << endl;
    cout << "Tax: " << tax << endl;
    cout << "Net Salary: " << net << endl;
}

int main() {
    Employee e;
    e.getDetails();
    e.calculate();
    e.displayPayslip();
    return 0;
}


OUTPUT:
Enter Employee Name: Alice
Enter Employee ID: 102
Enter Basic Pay: 30000

Employee Payslip
----------------
Name: Alice
ID: 102
Basic Pay: 30000
DA: 21000
HRA: 3000
Gross Salary: 54000
Tax: 10800
Net Salary: 43200

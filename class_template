Program:
#include <iostream>
using namespace std;
template <class T>
class Addition {
public:
T add(T,T);
};
template <class T>
T Addition<T>::add(T n1,T n2) {
T rs;
rs = n1+n2;
return rs;
}
int main () {
Addition<int>obj1;
Addition<long>obj2;
int A =10, B=20, C;
long I = 11, J = 22, K;
C = obj1.add(A,B);
cout<<"\n The sum of integer values: "<<C;
K = obj2.add(I,J);
cout<<"\n The sum of long values: "<<K;
return 0;
}

Output:

 The sum of integer values: 30
 The sum of long values: 33

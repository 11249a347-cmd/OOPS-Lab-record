Program:
#include <iostream>
#include <string>

using namespace std;

// A function that performs division and throws an exception on error
double divide(int numerator, int denominator) {
    if (denominator == 0) {
        // Throw a specific type of exception (in this case, a string literal)
        throw "Division by zero is not allowed!";
    }
    return static_cast<double>(numerator) / denominator;
}

int main() {
    int num, den;
    double result = 0.0;

    cout << "Enter numerator: ";
    cin >> num;
    cout << "Enter denominator: ";
    cin >> den;

    // The try block encloses the code that might throw an exception
    try {
        result = divide(num, den);
        cout << "Result of division: " << result << endl;
    }
    // The catch block handles the exception if one is thrown
    catch (const char* exp) {
        // This block catches exceptions of type 'const char*'
        cerr << "Exception caught: " << exp << endl;
    }
    // An optional general catch block can handle any other unexpected exceptions
    catch (...) {
        cerr << "An unknown exception occurred." << endl;
    }

    cout << "Program finished successfully." << endl;

    return 0;
}

Output:
Enter numerator: 9
Enter denominator: 0
Exception caught: Division by zero is not allowed!
Program finished successfully.

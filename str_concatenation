Program:

#include <iostream>
#include <cstring>
#include <iomanip>

using namespace std;

class MyString {
private:
    char* str;

public:
    // Constructor
    MyString() : str(nullptr) {}

    MyString(const char* s) {
        if (s == nullptr) {
            str = nullptr;
        } else {
            str = new char[strlen(s) + 1];
            strcpy(str, s);
        }
    }

    // Destructor to free memory
    ~MyString() {
        delete[] str;
    }

    // Overload the + operator for string concatenation
    MyString operator+(const MyString& other) {
        // Calculate the required length for the new string
        int len1 = (str == nullptr) ? 0 : strlen(str);
        int len2 = (other.str == nullptr) ? 0 : strlen(other.str);
        int totalLen = len1 + len2;

        // Create a temporary object to hold the concatenated result
        MyString temp;
        temp.str = new char[totalLen + 1];

        // Copy the first string
        if (str != nullptr) {
            strcpy(temp.str, str);
        }

        // Concatenate the second string
        if (other.str != nullptr) {
            strcat(temp.str, other.str);
        }

        return temp; // Return the concatenated string
    }

    // Function to display the string
    void display() {
        if (str != nullptr) {
            cout << str;
        }
    }
};

int main() {
    // Create two MyString objects
    MyString s1 = "Hello, ";
    MyString s2 = "World!";
    MyString s3;

    // Use the overloaded + operator for concatenation
    s3 = s1 + s2;

    cout << "String 1: ";
    s1.display();
    cout << endl;

    cout << "String 2: ";
    s2.display();
    cout << endl;

    cout << "Concatenated String (s1 + s2): ";
    s3.display();
    cout << endl;

    return 0;
}

Output:
String 1: Hello, 
String 2: World!
Concatenated String (s1 + s2): Hello, World!
